<%= form_for([journal, entry]) do |f| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <p>
        <span class="text-danger"><i class="fa fa-fw fa-times-circle"></i></span>
        <%= pluralize(entry.errors.count, "error") %>
        prohibited this entry from being saved</p>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <div class="pull-xs-right">
        <%= f.check_box :favorite, class: 'heart' %>
        <label for="entry_favorite"></label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= entry.errors[:title].empty? ? '' : 'has-danger' %>">
        <%= f.text_field :title, class: 'form-control input-lg form-text text-xs-center',
         autocomplete: 'off', placeholder: 'Give your entry a title' %>
        <% if entry.errors[:title].any? %>
        <% entry.errors[:title].each do |message| %>
        <span class="help-block"><%= message.capitalize %></span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= entry.errors[:body].empty? ? '' : 'has-danger' %>">
        <button type="button" class="pull-xs-right open-zen btn-sm btn-link">
          <span><i class="fa fa-fw fa-magic"></i></span>Open Zen Mode</button>
        <%= f.text_area :body, class: 'form-control form-text zen-mode ',
        placeholder: 'Write about your day, emotions or anything else that you want to record' %>
        <% if entry.errors[:body].any? %>
        <% entry.errors[:body].each do |message| %>
        <span class="help-block"><%= message.capitalize %></span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= entry.errors[:accomplishment].empty? ? '' : 'has-danger' %>">
        <%= f.label :accomplishment, class: 'control-label' %>
        <%= f.text_field :accomplishment, class: 'form-control form-text',
        placeholder: 'What was the best thing that happened to you, today?' %>
        <% if entry.errors[:accomplishment].any? %>
        <% entry.errors[:accomplishment].each do |message| %>
        <span class="help-block"><%= message.capitalize %></span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="actions">
        <%= f.hidden_field :journal_id %>
        <%= f.hidden_field :user_id %>
        <%= f.submit class: 'btn btn-success btn-lg btn-xs-block' %>
      </div>
    </div>
  </div>

<% end %>
