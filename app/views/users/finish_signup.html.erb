<section class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-12">
          <h1 class="text-xs-center"><%= t('.title') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-8 offset-md-2 space">
          <%= form_for(current_user, :as => 'user', :url => end_finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
          <% if @show_errors && current_user.errors.any? %>
          <div id="error_explanation alert alert-danger">
            <% current_user.errors.full_messages.each do |msg| %>
            <%= msg %>
            <% end %>
          </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email %>
            <div class="controls">
              <%= f.text_field :email, :autofocus => true, :value => '', class: 'form-control form-text' %>
              <p class="help-block"><%= t('.email_help') %></p>
            </div>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control form-text', placeholder: t('.password_placeholder')  %>
          </div>
          <div class="actions">
            <%= f.submit t('.button'), :class => 'btn btn-lg btn-success' %>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </section>
