<section class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="text-xs-center"><%= t('.title') %></h2>
    </div>
  </div>
  <div class="row space">
    <div class="col-xs-12">
      <p class="welcome-text">
        <%= t('.message') %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-fw fa-user"></i>
              </span>
              <%= f.text_field :name, class: 'form-control form-text', placeholder: t('.name_placeholder') %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-fw fa-envelope-o"></i>
              </span>
              <%= f.email_field :email, class: 'form-control form-text', placeholder: t('.email_placeholder') %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-fw fa-lock"></i>
              </span>
              <%= f.password_field :password, class: 'form-control form-text', placeholder: t('.password_placeholder') %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-fw fa-unlock"></i>
              </span>
              <%= f.password_field :password_confirmation, class: 'form-control form-text', placeholder: t('.password_confirmation_placeholder') %>
            </div>
          </div>
        </div>
      </div>

      <div class="actions text-xs-center">
        <%= f.submit t('.signup_button'), class: 'btn btn-lg btn-success btn-xs-block' %>
      </div>

      <% end %>
    </div>
  </div>
  <div class="row space">
    <div class="col-xs-12 text-xs-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
