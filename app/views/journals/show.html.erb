<section class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-xs-center">
        Details of <%= @journal.title %>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="pull-md-right">
        <small>
          <%= link_to icon('pencil', 'Edit', class: 'fa-fw'), edit_journal_path(@journal),
          class: 'btn btn-xs-block btn-primary-outline btn-sm' %>
        </small>
      </div>
    </div>
  </div>
  <div class="row space-3x">
    <div class="col-xs-12">
      <p class="lead">
        <span class="text-muted"><i class="fa fa-fw fa-clock-o"></i></span>
        Last time updated was at: <%= update_time_of @journal %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <p class="lead">
        <span class="text-muted"><i class="fa fa-fw fa-check"></i></span>
        You have <%= @journal.entries.count %> entries in this journal
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <p class="lead">
        <%= link_to icon('file-text-o', 'See the entries', class: 'fa-fw'), journal_entries_path(@journal) %>
      </p>
    </div>
  </div>
  <!-- todo add lenght of the all words in journal -->
  <!-- todo add avg percentage of emotions on this journal -->
</section>
