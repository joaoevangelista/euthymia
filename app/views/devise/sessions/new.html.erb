<section class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-xs-center login-title">Euthymia</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 space">
      <p class="welcome-text">
        Welcome to Euthymia. Please sign up if you don't have an account already.
      </p>
    </div>
  </div>
  <% if flash[:alert] %>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <p>
          <span class="text-danger"><i class="fa fa-times-circle fa-fw"></i></span>
          <%= flash[:alert] %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group <%= flash[:alert] ? 'has-danger' : ''%>">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-fw fa-envelope-o"></i>
          </span>
          <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: 'form-control form-text' %>
        </div>
      </div>

      <div class="form-group <%= flash[:alert] ? 'has-danger' : ''%>">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-fw fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', class: 'form-control form-text' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :remember_me %>
          </div>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-xs-12">
          <div class="actions text-xs-center">
            <%= f.submit "Log in", class: 'btn btn-lg btn-success btn-xs-block' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 space">
      <div class="text-xs-center">
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
